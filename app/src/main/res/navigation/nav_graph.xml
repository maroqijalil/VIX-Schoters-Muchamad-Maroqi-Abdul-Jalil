<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/news_list_fragment">

    <fragment
        android:id="@+id/news_list_fragment"
        android:name="com.maroqi.newsapplication.presentation.views.screens.NewsListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_news_list">

        <action
            android:id="@+id/to_detail"
            app:destination="@id/news_detail_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@android:anim/fade_in" />

        <action
            android:id="@+id/to_profile"
            app:destination="@id/profile_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />

        <action
            android:id="@+id/to_bookmark"
            app:destination="@id/bookmark_fragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/news_detail_fragment"
        android:name="com.maroqi.newsapplication.presentation.views.screens.NewsDetailFragment"
        tools:layout="@layout/fragment_news_detail">

        <argument
            android:name="news"
            app:argType=".domain.models.NewsModel" />
    </fragment>

    <fragment
        android:id="@+id/profile_fragment"
        android:name="com.maroqi.newsapplication.presentation.views.screens.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/bookmark_fragment"
        android:label="Bookmark"
        android:name="com.maroqi.newsapplication.presentation.views.screens.BookmarkFragment"
        tools:layout="@layout/fragment_bookmark" >

        <action
            android:id="@+id/to_detail"
            app:destination="@id/news_detail_fragment"
            app:enterAnim="@android:anim/fade_in"
            app:popEnterAnim="@android:anim/fade_in" />
    </fragment>
</navigation>
